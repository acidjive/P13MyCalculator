<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <EditText
            android:id="@+id/shownum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:padding="10pt"
            android:text="0"
            android:textAlignment="gravity"
            android:textColor="@color/whitetxt"
            android:textSize="20pt" />

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">


        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1pt">

            <Button
                    android:id="@+id/button22"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:onClick="btnClear"
                    android:text="AC"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/buplusminus"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:onClick="btnNumberEvent"
                    android:text="+/-"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/bupercent"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:onClick="btnPercent"
                    android:text="%"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/buDiv"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:onClick="btnOpEvent"
                    android:text="/"
                    android:textColor="@color/whitetxt"
                    android:textSize="18sp" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1pt">

            <Button
                    android:id="@+id/bu7"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:onClick="btnNumberEvent"
                    android:text="7"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/bu8"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:onClick="btnNumberEvent"
                    android:text="8"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/bu9"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:onClick="btnNumberEvent"
                    android:text="9"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/buMul"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="#FFF79231"
                    android:onClick="btnOpEvent"
                    android:text="*"
                    android:textColor="#FFFFF9F4"
                    android:textSize="18sp" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1pt">

            <Button
                    android:id="@+id/bu4"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:onClick="btnNumberEvent"
                    android:text="4"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/bu5"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="#FFD6D6D6"
                    android:onClick="btnNumberEvent"
                    android:text="5"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/bu6"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="#FFD6D6D6"
                    android:onClick="btnNumberEvent"
                    android:text="6"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/buSub"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="#FFF79231"
                    android:onClick="btnOpEvent"
                    android:text="-"
                    android:textColor="#FFFFF9F4"
                    android:textSize="18sp" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1pt">

            <Button
                    android:id="@+id/bu1"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="#FFD6D6D6"
                    android:onClick="btnNumberEvent"
                    android:text="1"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/bu2"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="#FFD6D6D6"
                    android:onClick="btnNumberEvent"
                    android:text="2"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/bu3"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="#FFD6D6D6"
                    android:onClick="btnNumberEvent"
                    android:text="3"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/buAdd"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="#FFF79231"
                    android:onClick="btnOpEvent"
                    android:text="+"
                    android:textColor="#FFFFF9F4"
                    android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/bu0"
                android:layout_width="60pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="2"
                android:background="#FFD6D6D6"
                android:onClick="btnNumberEvent"
                android:text="0"
                android:textSize="18sp" />

        <Button
                android:id="@+id/budot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#FFD6D6D6"
                android:onClick="btnNumberEvent"
                android:text="."
                android:textSize="18sp" />

        <Button
                android:id="@+id/buequal"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#FFF79231"
                android:onClick="btnEqualEvent"
                android:text="="
                android:textColor="#FFFFF9F4"
                android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>